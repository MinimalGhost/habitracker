<div class="">
  <h1><%= @user.name %></h1>
</div>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Habits</th>
      <th scope="col">Hours</th>
      <th scope="col">Sessions</th>
      <th scope="col">Longest Streak</th>
    </tr>
  </thead>
  <tbody>
    <%= @user.habits.each do |habit| %>
      <tr>
        <td><%= habit.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
