  <div class="row mt-5">
    <div class="stats col-12">
      <h3><%= @user.name %></h3>
      <ul class="d-inline-flex list-unstyled">
        <li class="pr-5"><%= render 'stats' %></li>
        <li class="pr-5"><%= link_to "New Goal", new_goal_path, class: "btn btn-primary btn-sm" %></li>
        <li class="pr-5"><%= link_to "New Habit", new_habit_path, class: "btn btn-primary btn-sm" %></li>
        <li class="pr-5"><%= link_to "Follow Users", users_path, class: "btn btn-primary btn-sm" %></li>
      </ul>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Habits</th>
            <th scope="col">Hours</th>
            <th scope="col">Sessions</th>
            <th scope="col">Streak</th>
            <th scope="col">Completed</th>
          </tr>
        </thead>
        <tbody>
          <% @user.goals.each do |goal| %>
            <tr>
              <td><%= goal.habit.name %></td>
              <td><%= goal.total_hours %>/<%= goal.target_hours %></td>
              <td><%= goal.total_events %>/<%= goal.target_times %></td>
              <td><%= goal.longest_streak%> / <%= goal.target_streak %></td>
              <td><%= goal.completed? %></td>
              <td><%= link_to "Show", goal_path(goal), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="feed col">
      <h3>Feed</h3>
      <%= render 'feed' %>
    </div>
  </div>
</div>
