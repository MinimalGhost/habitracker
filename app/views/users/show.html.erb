<div class="">
  <h1><%= @user.name %></h1>
  <div class="stats">
    <%= render 'stats' %>
  </div>
  <div>
    <%= render 'feed' %>
  </div>
<p><%= link_to "New Goal", new_goal_path %> | <%= link_to "New Habit", new_habit_path %> | <%= link_to "All Users", users_path %> | <%= render 'follow_form' if logged_in? %></p>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Habits</th>
      <th scope="col">Hours</th>
      <th scope="col">Sessions</th>
      <th scope="col">Streak</th>
      <th scope="col">Completed</th>
    </tr>
  </thead>
  <tbody>
    <% @user.goals.each do |goal| %>
      <tr>
        <td><%= goal.habit.name %></td>
        <td><%= goal.total_hours %>/<%= goal.target_hours %></td>
        <td><%= goal.total_events %>/<%= goal.target_times %></td>
        <td>0/0</td>
        <td><%=  %></td>
        <td><%= link_to "Show", goal_path(goal) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
