<div class="">
  <h1><%= @user.name %></h1>

<p><%= link_to "New Goal", new_goal_path %> | <%= link_to "New Habit", new_habit_path %></p>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Habits</th>
      <th scope="col">Hours</th>
      <th scope="col">Sessions</th>
      <th scope="col">Longest Streak</th>
    </tr>
  </thead>
  <tbody>
    <% @user.goals.each do |goal| %>
      <tr>
        <td><%= goal.habit.name %></td>
        <td>3/10</td>
        <td>1/3</td>
        <td>0/0</td>
        <td><%= link_to "Show", goal_path(goal) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
