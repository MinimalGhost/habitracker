<div class="container">
  <div class=".col-md-3 .col-md-offset-3">
    <h1>Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %><br>

        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
</div>
